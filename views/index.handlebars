<div class="container d-flex flex-column justify-content-center align-item-center">
  <h1 class="text-center mt-5">你想對誰說幹話</h1>

  <form action="/" method="POST">

    <div class="row justify-content-around mt-3">

      {{#each data}}
      <div class="card col-sm-3 ms-1 shadow p-3 mb-5 bg-light rounded">
        <img src="{{this.avatar}}" class="card-item-top my-1" style="width: 100%; height: 80%;" alt="{{this.title}}">
        <div class="card-body text-center">
          <input class="form-check-input" type="radio" name="career" value="{{this.career}}">
          {{this.title}}
        </div>
      </div>
      {{/each}}

    </div>

    <div class="row d-flex justify-content-center">
      <div class="col-sm-2 align-self-center d-flex justify-content-center">
        <button class="btn btn-dark" style="font-size: 20px;" type="submit">產生幹話</button>
      </div>

      <textarea placeholder="會出現什麼幹話呢?" readonly class="col-sm-10 rounded"
        style="height: 100%; width: 60%; font-size: 20px;">{{#if windbag}}{{windbag}}{{/if}}</textarea>
    </div>

  </form>
</div>